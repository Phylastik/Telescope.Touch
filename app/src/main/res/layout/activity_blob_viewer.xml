<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.BLOBViewerActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_rcv_blob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Receive images" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_image_stretch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_rcv_blob"
        android:layout_marginBottom="4dp"
        android:text="FITS image stretching" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_image_stretch_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_image_stretch"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="Calculate parameters only once" />

    <io.github.marcocipriani01.telescopetouch.views.ImprovedSpinner
        android:id="@+id/spinner_select_image_blob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_image_stretch_refresh"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/image_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_select_image_blob"
        android:text="Image info"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TableLayout
        android:id="@+id/blob_info_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_info_label"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/image_info_label"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File size:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0MB" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dimensions:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0x0" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Format:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".fits" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bits per pixel:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8" />
        </TableRow>
    </TableLayout>

    <com.github.chrisbanes.photoview.PhotoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/blob_info_table"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/blob_info_table"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Loading error placeholder"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/save"
        tools:ignore="ContentDescription" />
</RelativeLayout>