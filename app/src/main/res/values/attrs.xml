<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FloatingButtonsLayout">
        <attr name="fade_time" format="integer" />
        <attr name="invert_direction" format="boolean" />
        <attr name="distance" format="float" />
    </declare-styleable>

    <declare-styleable name="PreferencesButton">
        <attr name="pref_key" format="string" />
        <attr name="image_on" format="reference" />
        <attr name="image_off" format="reference" />
        <attr name="default_value" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>
</resources>